<!-- Custom Record Type drop down list for Campaign Calendar  -->
<apex:component controller="BLCC.CampaignCalendarRecordTypeListController">
<apex:attribute name="sObjectType" description="" type="String" required="true" default="Account" assignTo="{!sObjectType}">
</apex:attribute>
<apex:attribute name="value" description="" type="String" required="true">
</apex:attribute>
<apex:selectList value="{!value}" size="1">
<apex:selectOptions value="{!items}">
</apex:selectOptions>
</apex:selectList>
</apex:component>